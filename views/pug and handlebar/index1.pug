doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u", crossorigin="anonymous")
  body
    block content

    .container-fluid
  .row
    .col-md-12
      form(role='form', method='post')
        .form-group
          label(for='registerNo') Register No
          |  
          input#registerNo.form-control(type='name', name='registerNo')
        .form-group
          label(for='DOB') Date Of Birth
          |  
          input#DOB.form-control(type='password', name='DOB')
        .form-group
          label(for='phoneNo') Guardian&apos;s Phone No
          |  
          input#phoneNo.form-control(type='phone', name='phoneNo')
          .form-group.radio
          label(for='campus') Select campus
          p 
            input#Vellore(type='radio', name='campus', value='vellore')
            |   Vellore 
          p
            input#Chennai(type='radio', name='campus', value='chennai')
            |   Chennai
            
        |  
        button.btn.btn-default(type='submit')  Submit

