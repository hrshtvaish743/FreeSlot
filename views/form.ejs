<% include header.ejs %>
<body id="admin">
<div class="container">

<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Hello VITian!!</h1>
    <% if (name.length > 0) { %>
    <h2>You are Updating your TimeTable data for <span class="alert-danger"><%= name %></span></h2>
    <% } %>
    <h3>Please use your Parent's Login Credentials.</h3>
    <h4>Your passwords are not stored.</h4>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger text-center"><%= message %></div>
    <% } %>
    <form id="Form" method="post" onsubmit="return(check());">
        <div class="form-group">
            <label>Register No</label>
            <input type="text" id="regno" class="form-control" name="registerNo" data-fv-regexp-message="Invalid Register No." onkeyup="check(this.id)" required>
        </div>
        <div class="form-group">
            <label>Date of Birth (ddmmyyyy)</label>
            <input type="password" id="dob" class="form-control" name="DOB" required>
        </div>
        <div class="form-group">
            <label>Guardian's Phone No</label>
            <input type="phone" id="phno" class="form-control" name="phoneNo" required>
        </div>
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" id="email" class="form-control" name="email" required>
        </div>
        <div class="form-group">
          <h4></h4>
        </div>
        <div class="g-recaptcha" data-sitekey="6Lfu0xQUAAAAAGJRem2Qhg5SFMhUBoI72e2-KcSJ"></div>
        <button type="submit"  class="btn btn-warning btn-lg">Login</button>
    </form>
    <hr>
</div>
</div>
<% include footer.ejs %>
</body>
</html>
