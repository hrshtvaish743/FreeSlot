<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>FreeSlot</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-anchor"></span> Welcome <strong><%= user.local.name %></strong></h1>
		<a href="/logout" class="btn btn-default btn-sm">Logout</a>
	</div>

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="container">
			<div class="well">
				<h3><span class="fa fa-user"></span> Details</h3>
					<div class="modal-body row">
  					<div class="col-md-6">
							<p>
								<strong>Email </strong>: <%= user.local.email %><br>
								<strong>Club Name </strong>: <%= user.local.club %><br>
								<strong>ID </strong>: <%= user.local.loginID %>
							</p>
						</div>
						<div class="col-md-6">
							<p>
								List Of Your Club/Chapter's Students Who have updated their timetable.
							</p>
							<ul>
								<% students.forEach(function(student) { %>
									<li><%= student.name %></li>
									<% }); %>
							</ul>
						</div>
					</div>
			</div>
		</div>

	</div>

</div>
</body>
</html>
