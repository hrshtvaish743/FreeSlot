<% include header.ejs %>
<body id="admin">
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Hello VITian!!</h1>
    <h3>Please update your details.</h3>
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-danger text-center"><%= message %></div>
    <% } %>
    <form id="Form" method="post">
      <div class="form-group">
          <label>Name : <%= student.name %></label>
      </div>
      <div class="form-group">
          <label>Register Number : <%= student.regno %></label>
      </div>
        <div class="form-group">
            <label>Your local active Phone No</label>
            <input type="phone" id="localphno" class="form-control" name="phone" placeholder="<%= student.phone %>">
        </div>
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" id="email" class="form-control" name="email" placeholder="<%= student.email %>">
        </div>
        <div class="form-group">
          <h4></h4>
        </div>
        <button type="submit"  class="btn btn-warning btn-lg">Update</button>
    </form>
    <hr>
</div>
</div>
<% include footer.ejs %>
</body>
</html>
